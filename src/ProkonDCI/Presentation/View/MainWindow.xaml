<Window x:Class="ProkonDCI.Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.Resources>

        <XmlDataProvider x:Key="MyData">

            <x:XData>

                <Data xmlns="">

                    <Item primary="alpha" posX="10" posY="50" />

                    <Item primary="beta" posX="100" posY="25" />

                    <Item primary="gamma" posX="5" posY="0" />

                    <Item primary="delta" posX="125" posY="45" />

                    <Item primary="epsilon" posX="30" posY="20" />

                    <Item primary="zeta" posX="115" posY="10" />

                </Data>

            </x:XData>

        </XmlDataProvider>

    </Window.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderBrush="Black" BorderThickness="1">
            <TextBlock xml:space="preserve">
                <TextBlock.Text>
Prokon:
Planning System
                </TextBlock.Text>
            </TextBlock>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1">
            <TextBlock>
                <TextBlock.Text>
                    Selected Activity:
                </TextBlock.Text>
            </TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="0" 
                BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="4">
            <StackPanel>
                <Button Content="Text"
                        Command="{Binding AddActivityCommand}"/>
                <ListBox ItemsSource="{Binding Activities}"
                         Height="500"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="100" Height="20" BorderBrush="Black" BorderThickness="1">
                                <TextBlock Foreground="Black"  Text="{Binding Path=Name}" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Template>
                        <ControlTemplate TargetType="{x:Type ListBox}">
                            <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"

            BorderThickness="{TemplateBinding BorderThickness}">
                                <Canvas IsItemsHost="True" />
                            </Border>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Canvas.Left" Value="{Binding Position.X}" />
                            <Setter Property="Canvas.Top" Value="{Binding Position.Y}" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1">
            <TextBlock xml:space="preserve">
                <TextBlock.Text>
                    Prokon:
Planning System
                </TextBlock.Text>
            </TextBlock>
        </Border>
        <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="1">
            <TextBlock xml:space="preserve">
                <TextBlock.Text>
                    Prokon:
Planning System
                </TextBlock.Text>
            </TextBlock>
        </Border>
    </Grid>
</Window>
