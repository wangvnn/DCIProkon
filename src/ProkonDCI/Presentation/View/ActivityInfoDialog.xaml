<Window x:Class="ProkonDCI.Presentation.View.ActivityInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Info" Height="300" Width="300">
    <StackPanel Margin="5,5,5,5">
        <TextBlock Text="Name" Margin="0,0,0,10" />
        <TextBox Name="NameInput" Padding="3,3,3,3" />
        <TextBlock Text="Duration" Margin="0,0,0,10" />
        <TextBox Name="DurationInput" Padding="3,3,3,3" />
        <TextBlock Text="ResourceRequirement" Margin="0,0,0,10" />
        <TextBox Name="ResourceRequirementInput" Padding="3,3,3,3" />
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Button Name="BtnOk" Content="OK" Grid.Column="0" Margin="0,0,5,0" Padding="8" Click="BtnOk_Click" />
            <Button Name="BtnCancel" Content="Cancel" Grid.Column="1" Margin="5,0,0,0" Padding="8" Click="BtnCancel_Click" />
        </Grid>
    </StackPanel>
</Window>
